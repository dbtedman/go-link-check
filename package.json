{
  "name": "go-link-check",
  "private": true,
  "license": "MIT",
  "scripts": {
    "_prettier": "prettier './**/*.{js,md,yml,json}'",
    "audit": "npm run audit:npm && npm run audit:docker",
    "audit:npm": "snyk test --dev --file=package.json  --policy-path=.snyk",
    "audit:docker": "snyk test --docker $(docker build --quiet .) --dev --file=Dockerfile --policy-path=.snyk",
    "format": "npm run _prettier -- --write",
    "lint": "npm run _prettier -- --check",
    "snyk:auth": "snyk auth"
  },
  "devDependencies": {
    "husky": "3.0.3",
    "prettier": "1.18.2",
    "snyk": "^1.228.2"
  }
}
