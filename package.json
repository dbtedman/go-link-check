{
  "name": "go-link-check",
  "private": true,
  "license": "MIT",
  "scripts": {
    "_prettier": "prettier './**/*.{js,md,yml,json}'",
    "audit:docker": "snyk test --docker $(docker build --quiet .) --dev --file=Dockerfile --policy-path=.snyk",
    "audit:yarn": "snyk test --dev --file=package.json  --policy-path=.snyk",
    "format": "yarn _prettier -- --write",
    "lint": "yarn _prettier -- --check",
    "snyk": "snyk",
    "test": "yarn audit:yarn && yarn audit:docker"
  },
  "devDependencies": {
    "husky": "3.0.3",
    "prettier": "1.18.2",
    "snyk": "1.244.0"
  }
}
